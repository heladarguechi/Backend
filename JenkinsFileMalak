pipeline {
  agent any
  tools {
    
     jdk 'JAVA_HOME'
     maven 'M2_HOME'
    
  }
  stages {
    
    stage ('Look into Tools configuration') {
            steps {
                sh 'java --version'
                sh 'mvn --version'
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }
	
    stage('Clean Project') {
      steps {
         sh 'echo "Clean is processing ...."'
        sh 'mvn clean'
      }
    }
    
    stage ('Building Artifacts') {
            steps {
                sh 'echo "Building Artifacts is running ...."'
                sh 'mvn -DskipTests package'
              
            }
            
        }

    
    stage('Testing SonarQube ') {
		        steps {
		        withSonarQubeEnv('SonarQube') {
		        sh 'mvn clean -DskipTests package sonar:sonar'
	                  }
	                }
	            }
		    
    stage("NEXUS") {
			steps {
			sh 'mvn clean deploy -DskipTests'
                        }
        }
	
    stage('Docker build image') {
      steps {
         sh 'echo "Docker build image running ...."'
         sh 'docker build -t malakbensalem/azert .'

      }
    }
    
     stage('Docker login') {
      steps {
         sh 'echo "Docker login running...."'
        sh 'docker login --username malakbensalem --password 09885111Malak'

      }
    }
    
     stage('Docker push') {
      steps {
         sh 'echo "Docker push running ...."'
        sh 'docker push malakbensalem/azert'

      }
    }
      stage('Docker Compose') {
      steps {
         sh 'echo "Docker Compose running ...."'
         sh 'docker-compose up -d'
      }
  }
  stage('Junit') {
        steps {
           sh 'echo "Junit run...."'
          sh 'mvn  test'

        }
      }
  }

  post {
    success { mail to: "malak.bnsalem@gmail.com",
                    subject: "Build sucess",
                    body: "sucess"
             echo 'successful'}
    failure { mail to: "malak.bnsalem@gmail.com",
                    subject: "Build failed",
                    body: "failed"
             echo 'failed'}
  }
}



